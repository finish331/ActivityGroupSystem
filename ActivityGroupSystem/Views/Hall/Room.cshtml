@{
    ViewBag.Title = "Room";
}

<style type="text/css">
    #activity_detail {
        width: 100%;
    }

    #info {
        width: 100%;
        margin-bottom: 15px;
    }

    #info p {
        display: inline;
        margin-right: 30px;
    }

    #menu {
        vertical-align: top;
        padding: 0px;
        background-color: #d9e1e8;
    }

    #menu_title {
        text-align: center;
        background-color: #9baec8;
        padding: 5px 0px 5px 0px;
        margin: 0px;
    }

    #menu ul {
        list-style: none;
        padding: 0px;
        margin: 0px;
    }

    #menu button {
        height: 50px;
        width: 100%;
        border: 0px;
        color: black;
        background-color: #d9e1e8;
        transition-duration: 0.4s;
    }

    #menu button:hover {
        background-color: #2b90d9;
        color: white;
    }

    #chatroom {
        vertical-align: top;
        padding: 0px 0px 0px 15px;
    }

    #chatroom_title {
        margin-top: 0px;
    }

    #chat_form td {
        width: 100%;
        padding: 0px;
    }

    #chat_content {
        height: 300px;
        border: 1px solid #d9e1e8;
        border-radius: 25px 25px 0px 0px;
        padding: 15px;
    }

    #chat_input {
        min-width: 100%;
        max-width: 100%;
        height: 100%;
    }

    #chat_submit {
        width: 100%;
        height: 100%;
        border: none;
        border: 1px solid #9baec8;
        color: black;
        background-color: #d9e1e8;
    }
</style>

<div id="content">
    <!-- 活動資訊 -->
    <div id="info">
        <h1>Room</h1>
        <p>活動類型:</p>
        <p>目前人數:</p>
    </div>

    <table id="activity_detail">
        <tr>
            <!-- 功能選單 -->
            <td id="menu" class="col-md-3">
                <h3 id="menu_title">功能選單</h3>
                <ul>
                    <li><button type="button">管理活動</button></li>
                    <li><button type="button">轉移房主</button></li>
                    <li><button type="button">查看參加者名單</button></li>
                    <li><button type="button">邀請好友</button></li>
                    <li><button type="button">退出活動</button></li>
                </ul>
            </td>
            <!-- 聊天室 -->
            <td id="chatroom" class="col-md-9">
                <h3 id="chatroom_title">聊天室</h3>
                <div id="chat_content">test</div>
                <form id="chat_form">
                    <table>
                        <tr>
                            <td class="col-md-10">
                                <input type="text" id="chat_input" name="chat_input">
                            </td>
                            <td class="col-md-2">
                                <input type="submit" id="chat_submit" value="送出">
                            </td>
                        </tr>
                    </table>
                </form>
            </td>
        </tr>
    </table>
</div>

