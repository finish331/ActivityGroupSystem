@{ 
    var Test = "登入";
    var Test2 = "Login";
    var welcomeMessage = "";
    if (Request.Cookies["MemberName"] == null)
    {
        welcomeMessage = "HI，您尚未登入";
    }
    else
    {
        Test = "登出";
        Test2 = "Logout";
        welcomeMessage = "HI，" + Request.Cookies["MemberName"].Value;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    <link href="~/Content/kendo/kendo.common-material.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo/kendo.material.min.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/kendo.all.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("應用程式名稱", "Index", "Hall", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首頁", "Index", "Hall")</li>
                    <li>@Html.ActionLink("關於", "About", "Hall")</li>
                    <li>@Html.ActionLink("連絡人", "Contact", "Hall")</li>
                </ul>
                <ul class="nav navbar-nav" style="float:right;">
                    <li style="color:white; position:absolute; top:32%; left:70%">@welcomeMessage</li>
                    <li>@Html.ActionLink(Test, Test2, "Hall")</li>
                    @if (Request.Cookies["MemberName"] != null)
                    {
                        <li>@Html.ActionLink("個資", "MemberInfo", "Hall")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("註冊", "Register", "Hall")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/kendoUI")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
